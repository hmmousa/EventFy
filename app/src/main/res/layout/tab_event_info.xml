<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_margin="10dp"
            android:id="@+id/linearLayout2"
            android:baselineAligned="false">


            <FrameLayout
                android:id="@+id/event_info_details_name"
                style="@style/NavDrawerRowLayout.Main"
                android:layout_width="130dp">

                <TextView
                    android:id="@+id/txt_event_info_details_name"
                    style="@style/EventInfoDetails"
                    android:textColor="@color/darkred"
                    android:text="Event Name"
                    android:textStyle="bold|italic"
                    tools:fontFamily="casual"
                    android:layout_gravity="left|center_vertical" />



            </FrameLayout>

            <FrameLayout
                android:id="@+id/event_info_details_date"
                style="@style/NavDrawerRowLayout.Main"
                android:layout_width="130dp">

                <TextView
                    android:id="@+id/txt_event_info_details_date"
                    style="@style/EventInfoDetails"
                    android:text="Event Date"
                    android:textColor="@color/darkred"
                    android:textStyle="bold|italic"
                    tools:fontFamily="casual"
                    android:layout_gravity="left|center_vertical" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/event_info_details_time"
                style="@style/NavDrawerRowLayout.Main"
                android:layout_width="130dp">

                <TextView
                    android:id="@+id/txt_event_info_details_time"
                    style="@style/EventInfoDetails"
                    android:textColor="@color/darkred"
                    android:text="Event Time"
                    android:textStyle="bold|italic"
                    tools:fontFamily="casual"
                    android:layout_gravity="left|center_vertical" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/event_info_details_location"
                style="@style/NavDrawerRowLayout.Main"
                android:layout_width="130dp">

                <TextView
                    android:id="@+id/txt_event_info_details_location"
                    style="@style/EventInfoDetails"
                    android:textColor="@color/darkred"
                    android:text="Event Location"
                    android:textStyle="bold|italic"
                    tools:fontFamily="casual"
                    android:layout_gravity="left|center_vertical"
                    />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/event_info_details_distance"
                style="@style/NavDrawerRowLayout.Main"
                android:layout_width="130dp">

                <TextView
                    android:id="@+id/txt_event_info_details_distance"
                    style="@style/EventInfoDetails"
                    android:textColor="@color/darkred"
                    android:text="Event Distance"
                    android:textStyle="bold|italic"
                    tools:fontFamily="casual"
                    android:layout_gravity="left|center_vertical" />

            </FrameLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="33dp"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout">


        <FrameLayout
            android:id="@+id/event_info_details_name_input"
            style="@style/NavDrawerRowLayout.Main"
            android:layout_width="130dp">

            <TextView
                android:id="@+id/txt_input_event_info_details_name"
                style="@style/EventInfoDetails"
                android:text="Event Name ABC"
                tools:fontFamily="sans-serif-medium"
                android:layout_gravity="left|center_vertical" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/event_info_details_date_input"
            style="@style/NavDrawerRowLayout.Main"
            android:layout_width="130dp">

            <TextView
                android:id="@+id/txt_input_event_info_details_date"
                style="@style/EventInfoDetails"
                android:text="MM-DD-YYYY"
                tools:fontFamily="sans-serif-medium"
                android:layout_gravity="left|center_vertical" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/event_info_details_time_input"
            style="@style/NavDrawerRowLayout.Main"
            android:layout_width="130dp">

            <TextView
                android:id="@+id/txt_input_event_info_details_time"
                style="@style/EventInfoDetails"
                android:text="Event Time"
                tools:fontFamily="sans-serif-medium"
                android:layout_gravity="left|center_vertical" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/event_info_details_location_input"
            style="@style/NavDrawerRowLayout.Main"
            android:layout_width="130dp">

            <TextView
                android:id="@+id/txt_input_event_info_details_location"
                style="@style/EventInfoDetails"
                android:text="Event Location"
                tools:fontFamily="sans-serif-medium"
                android:layout_gravity="left|center_vertical" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/event_info_details_distance_input"
            style="@style/NavDrawerRowLayout.Main"
            android:layout_width="130dp">

            <TextView
                android:id="@+id/txt_input_event_info_details_distance"
                style="@style/EventInfoDetails"
                android:text="Event Distance"
                tools:fontFamily="sans-serif-medium"
                android:layout_gravity="left|center_vertical" />

        </FrameLayout>

    </LinearLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>